extends layout

block content
  h1= title
  p #{query.rows} #{query.cols}
  -
    var rows = Number(query.rows)
    var cols = Number(query.cols)
  if !Number.isInteger(rows)
    p rows is not integer
  if !Number.isInteger(cols)
    p cols is not integer
  else if rows < 1 || rows > 10
    p rows is out of bounds
  else if cols < 1 || cols > 10
    p cols is out of bounds
  else
    table#outer
      - for (let i=0; i<rows; i++) {
        tr#middle
          - for (let j=0; j<cols; j++) {
            td= 1 + i + j*rows
          - }
      - }

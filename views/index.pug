extends layout

block content
  h1= title
  p Welcome to my #{title}
  button(type="button", class="btn btn-primary", onclick="doBump()") Press Me
  div(id="bump") Bump the count




  script.
      var count = 0;
      var bump = 1;
        function doBump() {
          count = count + bump;
          bump = bump + 1;
          var divBump = document.getElementById('bump')
          divBump.innerHTML = `Count ${count} with bump ${bump}`;
        }

  a(href='/tablet') Tablet
